{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Hardhat Tests",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/node_modules/.bin/hardhat",
        "args": ["test", "--network", "hardhat"],
        "cwd": "${workspaceFolder}",
        "runtimeArgs": ["--no-deprecation"],
        "outputCapture": "std"
      }
    ]
  }
  